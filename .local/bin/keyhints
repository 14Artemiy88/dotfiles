#!/bin/bash

# GDK BACKEND. Change to either wayland or x11 if having issues
BACKEND=wayland

if pgrep -x "wofi" > /dev/null; then
    pkill wofi
fi

title="font='JetBrains Nerd Font Prop Bold 11' color='#ffffff'"
style="font='JetBrains Nerd Font Prop 9' color='#cccccc'"

# Launch yad with calculated width and height
GDK_BACKEND=$BACKEND yad \
    --title="Keybindings" \
    --no-buttons \
    --list \
    --column=Key: \
    --column=Description: \
    --timeout-indicator=bottom \
" = "                 "SUPER KEY (Windows Key)" \
"󰧭"                     "Переключение режима Resize" \
"ESC"                   "Закрыть это окно" \
" + H"                 "Это окно" \
"<span $title >━━━━ Default ━━━━━━━━━━━━━━━━━━━━</span>" "" \
"<span $style >──────── Приложения ────────</span>" "" \
" + T"                 "Терминал" \
"F1"                    "Выпадающий терминал" \
" SHIFT + M"           "VK & Telegram" \
" + B"                 "Браузер" \
" + D"                 "Папки" \
\
"<span $style >──────── Окна ────────</span>" "" \
" + Q"                 "Закрыть окно" \
" + "                 "Выбрать окно слева" \
" + "                 "Выбрать окно справа" \
" + "                 "Выбрать окно сверху" \
" + "                 "Выбрать окно снизу" \
" + Z"                 "Фокус на предыдущее окно" \
" + F"                 "Переключить плавающий режим активного окна" \
" ALT + F"             "Переключить плавающий режим всех окон" \
" + P"                 "Псевдо тайлинг" \
" + J"                 "Поменять компановку" \
" + ENTER"             "На весь экран" \
" SHIFT + ENTER"       "Распахнуть" \
" + ЛКМ"               "Переместить окно" \
\
"<span $style >──────── Управление ────────</span>" "" \
" + SPACE"             "Меню запуска программ" \
"ALT + SPACE"           "Запуск команд" \
" + G"                 "Поиск в Google" \
" + M"                 "Меню выключения" \
" + L"                 "Заблокировать" \
" + S"                 "Скриншот области" \
" SHIFT + S"           "Скриншот области с сохранением файла" \
" + W"                 "Спрятать waybar" \
" SHIFT + W"           "Перезапустить waybar" \
" + X"                 "Транслетировать текст из буфера обмена" \
" + V"                 "История буфера обмена" \
" + BACKSPACE"         "Включить/Выключить экран" \
" + ПКМ /  ALT + ЛКМ" "Изменить размер окна" \
\
"<span $style >──────── Экраны ────────</span>" "" \
" + TAB" "Переключить на предыдущий экран" \
" + 1" "Переключить на 1-й экран" \
" + 2 / F2" "Переключить на 2-й экран" \
" + 3 / F3" "Переключить на 3-й экран" \
" + 4 / F4" "Переключить на 4-й экран" \
" + 5 / F5" "Переключить на 5-й экран" \
" + 6 / F6" "Переключить на 6-й экран" \
" + 7 / F7" "Переключить на 7-й экран" \
" + 8 / F8" "Переключить на 8-й экран" \
" + 9 / F9" "Переключить на 9-й экран" \
" + 0 / F10" "Переключить на 10-й экран" \
" SHIFT + 1" "Переместить окно на 1-й экран" \
" SHIFT + 2" "Переместить окно на 2-й экран" \
" SHIFT + 3" "Переместить окно на 3-й экран" \
" SHIFT + 4" "Переместить окно на 4-й экран" \
" SHIFT + 5" "Переместить окно на 5-й экран" \
" SHIFT + 6" "Переместить окно на 6-й экран" \
" SHIFT + 7" "Переместить окно на 7-й экран" \
" SHIFT + 8" "Переместить окно на 8-й экран" \
" SHIFT + 9" "Переместить окно на 9-й экран" \
" SHIFT + 0" "Переместить окно на 10-й экран" \
" ALT + 1" "Переместить окно на 1-й экран без перехода" \
" ALT + 2" "Переместить окно на 2-й экран без перехода" \
" ALT + 3" "Переместить окно на 3-й экран без перехода" \
" ALT + 4" "Переместить окно на 4-й экран без перехода" \
" ALT + 5" "Переместить окно на 5-й экран без перехода" \
" ALT + 6" "Переместить окно на 6-й экран без перехода" \
" ALT + 7" "Переместить окно на 7-й экран без перехода" \
" ALT + 8" "Переместить окно на 8-й экран без перехода" \
" ALT + 9" "Переместить окно на 9-й экран без перехода" \
" ALT + 0" "Переместить окно на 10-й экран без перехода" \
" + CTRL +   /  + 󰶹" "Следующий экран" \
" + CTRL +   /  + 󰶼" "Предыдущий экран" \
"F12"                   "Открыть спец-экран" \
"SHIFT + F12"           "Переместить окно на спе-экран" \
\
"<span $title >━━━━ Resize ━━━━━━━━━━━━━━━━━━━━</span>" "" \
""              "Подвинуть окно на 1px вправо" \
""              "Подвинуть окно на 1px влево" \
""              "Подвинуть окно на 1px вверх" \
""              "Подвинуть окно на 1px вниз" \
" + "          "Переместить окно на 1px вправо" \
" + "          "Переместить окно на 1px влево" \
" + "          "Переместить окно на 1px вверх" \
" + "          "Переместить окно на 1px вних" \
" ALT + "      "Переместить окно на 10px вправо" \
" ALT + "      "Переместить окно на 10px влево" \
" ALT + "      "Переместить окно на 10px вверх" \
" ALT + "      "Переместить окно на 10px вних" \
" CTRL + "     "Поменять окно местами слева" \
" CTRL + "     "Поменять окно местами справа" \
" CTRL + "     "Поменять окно местами сверху" \
" CTRL + "     "Поменять окно местами снизу" \
